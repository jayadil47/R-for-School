specific_states <- filter(CrimeData, Name.of.Area == "New York" | Name.of.Area == "Florida" | Name.of.Area == "California" | Name.of.Area == "Texas" )
specific_states %>%
    select(Name.of.Area, Total.Violent.Crimes)%>%
